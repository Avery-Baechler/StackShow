{
  "manifest_version": 2,
  "name": "StackShow",
  "version": "1.0",

  "description": "Shows if a website is made with a popular tech stack",

  "icons": {
    "48": "icons/icon-32.png", 
    "32" : "icons/dark-32.png"
  },

    "permissions": [
        "activeTab"
    ],

  "browser_action": {
    "default_icon": "icons/icon-32.png",
    "default_title": "StackShow",
    "default_popup": "popup/menu.html"
  }, 

   "web_accessible_resources": [
    "toolToKeyDB.js"
  ],

  "background": {
    "scripts": ["background.js"],
          
    "persistent": false
  }

}

